
<div class="container">
  <div class="row">
    <div class="col-4">
      <form 
        action="/contest/image/{{ year }}/{{ month }}" 
        method="POST" 
        enctype="multipart/form-data">
        <input type="hidden" id="inp_hid" name="csrf" value="{{ csrf }}">
        <div class="form-group mt-3">
          <label for="userName">Name User</label>
          <input type="text" id="userName" class="form-control" name="userName">
        </div>
        <div class="form-group mt-3">
          <label for="userEmail">Email</label>
          <input type="email" required id="userEmail" class="form-control" name="userEmail">
        </div>
        <div class="form-group mt-3">
          <label for="userUpload">Upload an image</label>
          <div class="custom-file">
            <input type="file" id="userUpload" required accept="image/*" class="custom-file-input" name="userUpload">
          </div>
        </div>
        <div class="form-group mt-4">
          <button type="submit" class="btn btn-primary">Send File</button>
        </div>
      </form>
    </div>
  </div>
</div>